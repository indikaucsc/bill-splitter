{
  "name": "bill-splitter",
  "version": "1.0.0",
  "description": "bill-splitter service",
  "scripts": {
    "start": "npm run start-env-dev",
    "start-env-dev": "ts-node src/bill-splitter-api --NODE_ENV=dev",
    "start-env-prod": "ts-node src/bill-splitter-api --NODE_ENV=prd",
    "start:dev": "ts-node-dev --respawn src/bill-splitter-api --NODE_ENV=dev",
    "start:debug": "nodemon --config nodemon-debug.json --NODE_ENV=dev",
    "test": "jest",
    "lint": "tslint --fix 'src/**/*.ts'",
    "db:migrate-all": "sequelize db:migrate",
    "db:seed-all": "sequelize db:seed:all",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "sonar-scanner": "node_modules/sonar-scanner/bin/sonar-scanner"
  },
  "author": "Kamal Indika",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^12.12.5",
    "aspect.js": "^0.7.5",
    "autodetect-decoder-stream": "^1.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "bunyan-rotating-file-stream": "^1.6.3",
    "circular-json": "^0.5.9",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.10.0",
    "cluster": "^0.7.7",
    "compression": "^1.7.4",
    "config": "^2.0.2",
    "correlation-id": "^3.0.2",
    "cors": "^2.8.5",
    "count-lines-in-file": "^1.1.0",
    "dotenv": "^8.2.0",
    "execution-time": "^1.3.0",
    "express": "^4.17.1",
    "express-unless": "^0.5.0",
    "format-currency": "^1.0.0",
    "fs": "0.0.1-security",
    "glob": "^7.1.3",
    "http-status": "^1.3.2",
    "inversify": "^4.13.0",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.1.0",
    "inversify-inject-decorators": "^3.1.0",
    "ioredis": "^4.17.3",
    "js-yaml": "^3.12.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.5",
    "node-cron": "^2.0.3",
    "node-uuid": "^1.4.8",
    "nodemailer": "^6.3.1",
    "nodemailer-express-handlebars": "^3.1.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "path": "^0.12.7",
    "payload-validator": "^1.0.4",
    "pm2": "^4.2.3",
    "pug": "^2.0.4",
    "readline": "^1.3.0",
    "redis": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-express-ts": "^1.0.0",
    "swagger-ui-dist": "^3.19.2",
    "ts-custom-error": "^2.2.2",
    "uniqid": "^5.0.3",
    "util": "^0.12.3",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.6.13",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.27",
    "@types/body-parser": "^1.17.0",
    "@types/bull": "^3.14.1",
    "@types/bull-board": "^0.6.0",
    "@types/bunyan": "^1.8.4",
    "@types/compression": "0.0.36",
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/express-unless": "0.0.32",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.9.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.119",
    "@types/morgan": "^1.7.35",
    "@types/uniqid": "^4.1.3",
    "@types/validator": "^10.11.3",
    "axios-mock-adapter": "^1.16.0",
    "jest": "^25.2.2",
    "jest-create-mock-instance": "^1.1.0",
    "jest-mock-axios": "^2.1.11",
    "jest-sonar-reporter": "^2.0.0",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^1.18.4",
    "reflect-metadata": "^0.1.13",
    "sequelize-redis-cache": "^2.0.1",
    "sonar-scanner": "^3.1.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.2.0",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.30",
    "tsconfig-paths": "^3.6.0",
    "tslint": "^5.12.1",
    "typescript": "^3.6.4",
    "url-pattern": "^1.0.3"
  },
  "jest": {
    "verbose": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": [
      "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?|tsx?)$"
    ]
  },
  "jestSonar": {
    "sonar56x": true
  }
}
